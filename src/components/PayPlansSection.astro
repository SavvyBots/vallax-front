---
import FreeCard from "./FreeCard.astro";
import PremiumCard from "./PremiumCard.astro";
---

<section class="flex flex-col mt-30">
    <nav class="flex flex-grow items-center justify-end">
        <div class="flex flex-col py-4 gap-5 items-center">
            <h1 class="text-3xl font-bold">Nuestros planes</h1>
            <span class="max-w-70 text-2xl font-medium text-center"
                >¿Gratis o pro? Tú decides</span
            >
        </div>
        <img
            src="/src/assets/vallax-money.png"
            alt="vallax-money"
            width="200"
            height="200"
        />
    </nav>
    <div class="flex justify-center gap-20 items-start">
        <FreeCard />
        <PremiumCard />
    </div>
</section>
