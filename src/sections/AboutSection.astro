---
import AboutCard from "../components/AboutCard.astro";
import AboutCardTwo from "../components/AboutCardTwo.astro";
import Phone from "../components/Phone.astro";
---

<section class="flex flex-col items-center xl:mt-40 w-full" id="about">
    <nav class="flex flex-col items-center w-full">
        <h1>Como funciona</h1>
        <hr class="w-48 h-1 mx-auto bg-primary border-0 rounded-sm" />
    </nav>
    <div
        class="flex flex-col mt-20 w-full px-15 gap-20 md:flex-row md:justify-center md:gap-60 2xl:mt-50"
    >
        <AboutCard />
        <AboutCardTwo class:list={"self-end"} />
    </div>
    <Phone class:list={"mt-20"} />
</section>
