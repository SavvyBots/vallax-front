---
import DocButton from "../components/DocButton.astro";
import StartButton from "../components/StartButton.astro";
---

<section class="flex flex-col items-center">
    <img src="/src/assets/vallax-pet.svg" alt="not found" />
    <div class="flex flex-col gap-7 mt-8">
        <span class="max-w-80 text-center text-[1rem] font-medium">
            Controla las principales <b>plataformas</b> de segunda mano
        </span>

        <div class="flex flex-col gap-2">
            <div class="flex gap-2">
                <div
                    class="px-3 py-1 border-1 rounded-[6px] border-primary flex"
                >
                    <img src="/src/assets/wallapop.svg" />
                    <img src="/src/assets/vinted.svg" />
                </div>
                <DocButton />
            </div>
            <StartButton />
        </div>
    </div>
</section>
